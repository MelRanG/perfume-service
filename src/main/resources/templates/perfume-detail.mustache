{{>layout/header}}

<main class="py-5">
    <div class="container px-3 px-lg-2 mt-5">
        <div class="profile_view_inner row">
            <div class="profile_picture col-md-3">
                <div class="card h-100">
                    <img class="card-img-top" src="{{image}}">
                    <div class="card-body p-4">
                        <h5 class="text-center">{{perfumeName}}</h5>
                        <h5 class="text-center">호감 : {{favoriteUser}}</h5>
                        <h5 class="text-center">불호감 : {{unFavorableUser}}</h5>

                    </div>
                </div>

            </div>
            <div class="row col-md-9 profile_top_right_wrap">
                <div class="profile_right_top row">
                    <div class="favorite_list col-md-6 mt-4">
                        <h5 class="text-center">호감 유저</h5>
                        {{#favoriteUserList}}
                        <span class="col col-lg-2">
                            {{userId}}
                            </span>
                        {{/favoriteUserList}}
                    </div>
                    <div class="unfavorable_list col-md-6 mt-4 mr-4">
                        <h5 class="text-center">불호감 유저</h5>
                        {{#unFavorableUserList}}
                        <span class="col col-lg-2">
                            {{userId}}
                            </span>
                            {{/unFavorableUserList}}
                    </div>
                </div>
                <div class="commlist mt-4 border border-dark">
                    <h3 class="text-center">향수 한줄평</h3>

                </div>
            </div>
        </div>
</main>

{{>layout/footer}}