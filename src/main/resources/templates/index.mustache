{{>layout/header}}

<main class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4">
            <!-- 아이템 시작 -->
            {{#perfume}}
                <div class="clo mb-5">
                    <div class="card h-100">
                        <img class="card-img-top" src="{{image}}">
                        <div class="card-body p-4">
                            <div class="text-center">
                                <a href="/perfume/detail/{{perfumeName}}"><h5 class="fw-bolder">{{perfumeName}}</h5></a>
                                호감도:{{CountPerfumeName}}
                            </div>
                        </div>
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                <a class="btn btn-outline-dark mt-auto" href="#">View options</a>
                            </div>
                        </div>
                    </div>
                </div>
            {{/perfume}}
        </div>
    </div>

        <ul class="pagination justify-content-center">
            {{#perfume.hasPrevious}}
                <li class="page-item"><a class="page-link" href="/perfume/list?page={{previous}}">이전</a> </li>
            {{/perfume.hasPrevious}}
            {{^perfume.hasPrevious}}
                <li class="page-item disabled"><a class="page-link" href="/perfume/list?page={{previous}}">이전</a> </li>
            {{/perfume.hasPrevious}}
            {{#perfume.hasNext}}
                <li class="page-item"><a class="page-link" href="/perfume/list?page={{next}}">다음</a> </li>
            {{/perfume.hasNext}}
            {{^perfume.hasNext}}
                <li class="page-item disabled"><a class="page-link" href="/perfume/list?page={{next}}">다음</a> </li>
            {{/perfume.hasNext}}
        </ul>
</main>

{{>layout/footer}}